package paternPrinting;

import java.util.Scanner;

public class Paternsample {
	
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("enter Limit");
		int num=sc.nextInt();
		int i,j,h;
		for(i=1;i<=num;i++) {
			for(j=1;j<=i;j++) {
				System.out.print(" ");}
				for(h=i;h<=num;h++) {
						System.out.print("*");}
			System.out.println();}}

}