#include <stdio.h>
#include <stdlib.h>

int main(void) {
	char string[20];
	int length;
	setbuf(stdout,NULL);
	printf("enter a string");
	scanf("%s",string);
	length=strlen(string);
	printf("%d",length);
	return EXIT_SUCCESS;
}
