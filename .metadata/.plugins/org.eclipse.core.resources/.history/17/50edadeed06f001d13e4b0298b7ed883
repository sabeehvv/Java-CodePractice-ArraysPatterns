package paternPrinting;

import java.util.Scanner;

public class Paternsample {
	
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("enter Limit");
		int num=sc.nextInt();
		int i,j;
		for(i=0;i<num;i++) {
			for(j=i;j<num;j++) {
				System.out.print(" ");{
					for(j=i;j<num;j++) {
						System.out.println("* ");
					}
				}
			}System.out.println();}

}}
